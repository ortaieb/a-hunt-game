{
  "name": "scavenger-hunt-game-server",
  "version": "1.0.0",
  "description": "Backend server for the Scavenger Hunt Game",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check"
  },
  "keywords": [
    "scavenger-hunt",
    "game",
    "server",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@effect/sql": "^0.45.0",
    "@effect/sql-drizzle": "^0.44.0",
    "@effect/sql-pg": "^0.46.0",
    "@types/cors": "^2.8.19",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "effect": "^3.17.14",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^10.0.0",
    "yargs": "^17.7.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.15.5",
    "@types/reflect-metadata": "^0.0.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
